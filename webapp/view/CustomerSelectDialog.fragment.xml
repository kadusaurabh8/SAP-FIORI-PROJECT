<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <SelectDialog id="_IDGenSelectDialog1"
    title="{i18n>titleSelectCustomer}"
    contentHeight="38.3%"
    rememberSelections="true"
    confirm=".onCustomerSelectConfirm"
    liveChange=".onCustomerSelectChange"
    items="{
        path: 'sensorModel>/customers',
        sorter: {path:'name'}
    }">
        <StandardListItem id="_IDGenStandardListItem1" title="{sensorModel>name}"/>
    </SelectDialog>
</core:FragmentDefinition>